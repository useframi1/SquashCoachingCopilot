# Include package metadata and documentation
include README.md
include LICENSE

# Include configuration files
recursive-include squashcopilot *.json

# Include model weights
recursive-include squashcopilot/modules/*/model/weights *.pt *.pkl *.pth

# Include test data if needed
recursive-include squashcopilot/modules/*/tests/data *

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
