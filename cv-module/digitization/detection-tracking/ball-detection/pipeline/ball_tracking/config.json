{
    "model": {
        "model_path": "models/tracknet/weights/model_best.pt",
        "device": "auto",
        "model_width": 640,
        "model_height": 360
    },
    "postprocessing": {
        "window": 20,
        "threshold": 80
    },
    "wall_hit_detection": {
        "prominence": 50.0,
        "width": 10,
        "min_distance": 50
    },
    "racket_hit_detection": {
        "slope_window": 10,
        "slope_threshold": 3.0,
        "min_distance": 15,
        "lookback_frames": 50
    },
    "shot_classification": {
        "direction_thresholds": {
            "straight_max_lateral_px": 80,
            "cross_court_min_lateral_px": 300
        },
        "depth_thresholds": {
            "drop_max_time_frames": 15,
            "drop_max_velocity_px_per_frame": 12.0,
            "long_min_time_frames": 20
        },
        "speed_thresholds": {
            "drive_min_velocity_px_per_frame": 25.0
        },
        "player_attribution": {
            "max_distance_px": 120
        },
        "feature_windows": {
            "velocity_frames": 5,
            "acceleration_frames": 10
        }
    }
}
